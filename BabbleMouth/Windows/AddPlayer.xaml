<Window x:Class="BabbleMouth.Windows.AddPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Player" SizeToContent="WidthAndHeight" Background="DimGray" PreviewKeyUp="Window_PreviewKeyUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="100" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" Margin="5" Foreground="White" />
        <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Name="PlayerNameInputTextBox" />
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Class" Margin="5" Foreground="White" />
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="5" Name="ClassComboBox" />
        <Button Name="AddButton" Grid.Row="2" Grid.Column="1" Width="75" Height="23" Margin="5,5,85,5" HorizontalAlignment="Right" Content="Add" Click="AddButton_Click" />
        <Button Name="CloseButton" Grid.Row="2" Grid.Column="1" Width="75" Height="23" Margin="5" HorizontalAlignment="Right" Content="Close" Click="CloseButton_Click" />
    </Grid>
</Window>
